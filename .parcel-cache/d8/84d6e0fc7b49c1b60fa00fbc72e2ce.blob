  background-color: transparent;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1001;
  background-image: radial-gradient(
    circle 248px at center,
    #16d9e3 0%,
    #30c7ec 47%,
    #46aef7 100%
  );
}

.circle-loader {
  position: relative;
  width: 20rem;
  height: 20rem;
  display: flex;
  z-index: 1002;
  justify-content: center;
  align-items: center;
}

.circle {
  border-radius: 50% 50% 50% 50%;
  position: absolute;
  border-top: 2px solid #fff;
  border-bottom: 2px solid transparent;
  border-left: 2px solid #fff;
  border-right: 2px solid transparent;
  animation: animate 2s infinite;
}

.circle_one {
  left: 45%;
  top: 45%;
  width: 5rem;
  height: 5rem;
}

.circle_two {
  left: 40%;
  top: 40%;
  width: 7rem;
  height: 7rem;
  animation-delay: 0.2s;
}

.circle_three {
  left: 35%;
  top: 35%;
  width: 9rem;
  height: 9rem;
  animation-delay: 0.4s;
}

.circle_four {
  left: 30%;
  top: 30%;
  width: 11rem;
  height: 11rem;
  animation-delay: 0.6s;
}

@keyframes animate {
  50% {
    transform: rotate(360deg) scale(0.8);
  }
}

*,
*::after,
*::before {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
  font-size: 62.5%;
}

@keyframes moveDown {
  0% {
    opacity: 0;
    transform: translatey(-10rem);
  }
  100% {
    opacity: 1;
    transform: translate(0);
  }
}

@keyframes moveUp {
  0% {
    opacity: 0;
    transform: translateY(5rem);
  }
  100% {
    opacity: 1;
    transform: translate(0);
  }
}

@keyframes appear {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

@keyframes blink {
  0% {
    opacity: 0;
  }
  50% {
    opacity: 0.5;
  }
  100% {
    opacity: 1;
  }
}

.btn--blue {
  margin-top: 2rem;
  list-style: none;
  text-decoration: none;
  color: white;
  font-weight: 400;
  text-transform: uppercase;
  padding: 1rem 3rem;
  cursor: pointer;
  border-radius: 2rem;
  font-size: 1.5rem;
  backface-visibility: hidden;
  transition: all 0.3 ease-in;
  animation: moveUp 1s ease-in;
  animation-delay: 0.5s;
  position: relative;
  z-index: 100;
  animation-fill-mode: backwards;
}
.btn--blue:hover {
  transform: translateY(-5%);
  color: white;
  box-shadow: 0 1rem 2rem rgba(0, 0, 0, 0.5);
}
.btn--blue:hover::after {
  opacity: 0;
  transition: 0.4s;
}

.arrow {
  margin-top: 1rem;
  backface-visibility: hidden;
  transition: all 0.3 ease-in;
  animation: blink 1s linear infinite;
  animation-delay: 1.5s;
  text-transform: uppercase;
  color: white;
  animation-fill-mode: backwards;
}

